<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bs.biz.mapper.common.MenuMapper">

    <select id="findByParent" resultType="com.bs.base.model.common.Menu">
        SELECT * FROM Menu where parent = #{0}
    </select>

    <update id="update">
        UPDATE Menu SET
        menuNo = #{menuNo}
        text = #{text}
        authorityNo = #{authorityNo}
        icon = #{icon}
        url = #{url}
        parent = #{parent}
    </update>
</mapper>